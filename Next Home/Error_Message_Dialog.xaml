<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="Next_Home.Error_Message_Dialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Next_Home"
    CloseButtonText="Close"
    Style = "{StaticResource DefaultContentDialogStyle}"
    >

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Horizontal" >
        <!-- Content body -->
        <FontIcon Glyph="&#xEB90;" Foreground="Red" FontWeight="ExtraBold" VerticalAlignment="Center" />
        <TextBlock x:Name="Error_Message" x:FieldModifier="public" Text="Connection Error" TextWrapping="Wrap" Margin="8,14,0,0" />
    </StackPanel>
    
</ContentDialog>
